<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema POS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: linear-gradient(135deg, #eaf6f6, #d6f7ff);
            color: #333;
            margin: 0;
        }

        .navbar {
            background: linear-gradient(90deg, #007bff, #00bcd4);
            color: #fff;
            padding: 10px 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #fff;
            text-transform: uppercase;
            font-size: 1.4rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            margin-left: 20px;
            font-size: 1rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700;
            }

        .user-menu {
            display: flex;
            align-items: center;
            margin-left: auto;
        }

        .dropdown span {
            cursor: pointer;
            color: #fff;
            display: flex;
            align-items: center;
            font-size: 1rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .dropdown span:hover {
                color: #ffd700;
            }

        .dropdown i {
            margin-left: 8px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 160px;
            overflow: hidden;
        }

            .dropdown-menu a {
                color: #333;
                padding: 10px 16px;
                text-decoration: none;
                display: block;
                font-size: 0.9rem;
                transition: background-color 0.3s ease;
            }

                .dropdown-menu a:hover {
                    background-color: #00bcd4;
                    color: #fff;
                }

        .container {
            margin-top: 20px;
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        a {
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/Admin/Index">Sistema POS</a>
        <div class="navbar-nav">
            <a class="nav-link" href="/Productos/Index">Productos</a>
            <a class="nav-link" href="/Empleados/Index">Empleados</a>
            <a class="nav-link" href="/Clientes/Index">Clientes</a>
            <a class="nav-link" href="/Ventas/Index">Ventas</a>
        </div>
        <div class="user-menu">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <span>
                        <i class="fas fa-user"></i> @User.Identity.Name
                        <i class="fas fa-chevron-down"></i>
                    </span>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Cuenta/Logout">
                            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                        </a>
                    </div>
                </div>
            }
            else
            {
                <a class="btn btn-primary btn-sm" href="/Cuenta/Login">Iniciar sesión</a>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown span').click(function (e) {
                e.stopPropagation();
                var menu = $(this).siblings('.dropdown-menu');
                menu.toggle();
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').hide();
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
