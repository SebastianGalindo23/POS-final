<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - POS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            background-color: #fff;
        }

        header {
            background: linear-gradient(45deg, #ffb300, #ff9100, #ff6f00);
            color: #fff;
            padding: 20px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            header h1 {
                font-size: 1.5rem;
                margin: 0;
                font-weight: bold;
            }

            header nav a {
                color: #fff;
                margin: 0 12px;
                font-size: 1rem;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                header nav a:hover {
                    color: #ff5722;
                }

        .ml-auto {
            display: flex;
            align-items: center;
        }

        .dropdown {
            position: relative;
        }

            .dropdown span {
                cursor: pointer;
                display: flex;
                align-items: center;
                font-size: 1rem;
                color: #fff;
                transition: color 0.3s ease;
            }

                .dropdown span:hover {
                    color: #ff5722;
                }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 160px;
            z-index: 1;
            overflow: hidden;
        }

            .dropdown-menu a {
                color: #333;
                padding: 10px 16px;
                text-decoration: none;
                display: block;
                font-size: 0.9rem;
                text-align: left;
                transition: background-color 0.3s ease;
            }

                .dropdown-menu a:hover {
                    background-color: #ff6f00;
                    color: #fff;
                }

        /* Contenedor para el contenido */
        main {
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            margin: 20px auto;
            max-width: 1200px;
        }

        a {
            color: #ff6f00;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #e65100;
            }

        .dropdown span i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }

        .dropdown-menu a:hover span i {
            transform: rotate(180deg);
        }
    </style>
</head>
<body>
    <header>
        <h1>POS - Ventas</h1>
        <nav>
            <a href="/Admin/Index">Administrar</a>
        </nav>
        <div class="ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <span>
                        <i class="fas fa-user"></i> @User.Identity.Name
                        <i class="fas fa-chevron-down"></i>
                    </span>
                    <div class="dropdown-menu">
                        <a href="/Cuenta/Logout">
                            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                        </a>
                    </div>
                </div>
            }
            else
            {
                <a class="btn btn-warning btn-sm" href="/Cuenta/Login">Iniciar sesión</a>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown span').click(function (e) {
                e.stopPropagation();
                var menu = $(this).siblings('.dropdown-menu');
                menu.toggle();
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').hide();
                }
            });
        });
    </script>
</body>
</html>