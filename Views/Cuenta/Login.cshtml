@model POS.Models.EmpleadoLoginModel

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #ffffff;">
    <div class="card shadow" style="width: 400px; border-radius: 15px; background-color: #ffffff;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4" style="color: #007bff;">Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Usuario" class="form-label font-weight-bold">
                        <i class="fas fa-user"></i> Usuario
                    </label>
                    <input asp-for="Usuario" class="form-control" placeholder="Ingresa tu usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Contrasena" class="form-label font-weight-bold">
                        <i class="fas fa-lock"></i> Contraseña
                    </label>
                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3" style="border-radius: 50px;">Iniciar Sesión</button>
            </form>
            <div class="text-center">
                <p class="mb-2" style="color: #333;">¿No tienes una cuenta?</p>
                <a asp-action="Register" class="btn btn-outline-primary btn-sm" style="border-radius: 50px;">Registrarse</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
